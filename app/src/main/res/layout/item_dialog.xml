<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:background="#C3F8DA"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:foreground="?selectableItemBackground"
        android:id="@+id/imageViewClose"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewTitle"
        android:textColor="#4F8865"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewClose"
        android:text="Like a boss!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageviewGlass"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textViewTitle"
        android:src="@drawable/glass"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewContent"
        android:textColor="#94CDAA"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:maxWidth="250dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imageviewGlass"
        android:text="You have successfully completed the challenge. Keep it up to earn more points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewPoint"
        android:textColor="#4F8865"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:maxWidth="250dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/textViewContent"
        android:text="+57 points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appButtonYes"
        android:paddingHorizontal="10dp"
        android:background="#1A7F2F"
        android:textColor="#ffff"
        android:text="Yessssssssssss"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/textViewPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>